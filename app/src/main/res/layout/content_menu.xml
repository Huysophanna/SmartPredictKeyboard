<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.arcanetecher.smartpredictkeyboard.Menu"
    tools:showIn="@layout/activity_menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top|center_horizontal"
            android:orientation="vertical"
            tools:ignore="UselessParent"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/instructionBtn"
                        style="?metaButtonBarButtonStyle"
                        android:drawableTop="@drawable/ic_open_book_top_view"

                        android:textColor="#f5f5f5"
                        android:background="@drawable/instructions"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:text="instructions"
                        android:textSize="15dp"
                        android:elevation="0dp"
                        android:padding="20dp"
                        android:layout_weight="0.5"/>

                    <Button
                        android:id="@+id/previewbtn"
                        style="?metaButtonBarButtonStyle"
                        android:drawableTop="@drawable/ic_preview"

                        android:textColor="#f5f5f5"
                        android:background="@drawable/preview"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:text="preview"
                        android:textSize="15dp"
                        android:padding="20dp"
                        android:layout_weight="0.5"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button9"
                        style="?metaButtonBarButtonStyle"
                        android:drawableTop="@drawable/ic_settings"

                        android:textColor="#f5f5f5"
                        android:background="@drawable/setting"
                        android:layout_width="192dp"
                        android:layout_height="170dp"
                        android:text="setting"
                        android:textSize="15dp"
                        android:padding="20dp"
                        android:layout_weight="0.5"/>

                    <Button
                        android:id="@+id/feedbackBtn"
                        style="?metaButtonBarButtonStyle"
                        android:drawableTop="@drawable/ic_notepad"

                        android:textColor="#f5f5f5"
                        android:background="@drawable/feedback"
                        android:layout_width="192dp"
                        android:layout_height="170dp"
                        android:text="feedback"
                        android:textSize="15dp"
                        android:padding="20dp"
                        android:layout_weight="0.5"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button11"
                        style="?metaButtonBarButtonStyle"
                        android:drawableTop="@drawable/ic_rate_star_button"

                        android:textColor="#f5f5f5"
                        android:background="@drawable/rate"
                        android:layout_width="192dp"
                        android:layout_height="170dp"
                        android:text="rate us"
                        android:textSize="15dp"
                        android:padding="20dp"
                        android:layout_weight="0.5"/>

                    <Button
                        android:id="@+id/button12"
                        style="?metaButtonBarButtonStyle"
                        android:drawableTop="@drawable/ic_share"

                        android:textColor="#f5f5f5"
                        android:background="@drawable/share"
                        android:layout_width="192dp"
                        android:layout_height="170dp"
                        android:text="share"
                        android:textSize="15dp"
                        android:padding="20dp"
                        android:layout_weight="0.5"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
